{
  "name": "vmg-reader",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development npm-run-all electron:tsc -p dev -r electron:dev",
    "electron:dev": "electron dist/main.js",
    "electron:tsc": "esbuild main.ts preload.ts --format=cjs --outdir=dist",
    "electron:tsc:prod": "esbuild main.ts preload.ts --outdir=dist --minify --sourcemap",
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.4",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@types/mailparser": "^3.4.0",
    "framer-motion": "^5",
    "mailparser": "^3.4.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react": "^1.0.0",
    "electron": "^16.0.4",
    "electron-devtools-installer": "^3.2.0",
    "esbuild": "^0.14.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.2",
    "vite": "^2.6.4"
  }
}
